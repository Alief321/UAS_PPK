<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/haloUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:height="40dp"
        android:background="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="@string/HaloUser"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quotes"
        android:layout_width="412dp"
        android:layout_height="86dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="546dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="Loading quotes"
        android:textColor="#575757"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/haloUser"
        app:layout_constraintTop_toBottomOf="@+id/haloUser" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="@+id/haloUser"
        app:layout_constraintTop_toTopOf="@+id/haloUser"
        app:srcCompat="@drawable/animasi" />

</androidx.constraintlayout.widget.ConstraintLayout>
