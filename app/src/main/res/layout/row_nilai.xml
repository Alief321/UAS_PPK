<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/books"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMatkul"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/subprimary"
                android:gravity="center"
                android:text="Matkul: "
                android:textColor="#E3E3E3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTugas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="Tugas: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textPraktikum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="Praktikum: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textUTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="UTS: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textUAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="UAS: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textAngka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="Angka: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textHuruf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="Huruf: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textBobot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="Bobot: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textSemesterNilai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B2651FFF"
                android:paddingLeft="12dp"
                android:text="Semester: "
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tambahkan elemen UI lainnya (UTS, UAS, praktikum, nilai angka, nilai huruf) -->

</LinearLayout>